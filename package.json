{
	"name": "task-manager",
	"version": "1.0.0",
	"description": "Assignment 1 for backend engineering launchpad",
	"main": "server.js",
	"scripts": {
		"start": "node server.js",
		"dev": "nodemon server.js",
		"pretest": "node -e \"if (process.version.slice(1).split('.')[0] < 18) { console.error('Unsupported Node.js version, please use version 18'); process.exit(1); }\"",
		"test": "tap test/*.js --disable-coverage",
		"test:coverage": "tap test/*.js --coverage-report=html --coverage-report=text",
		"test:watch": "tap test/*.js --watch --disable-coverage",
		"coverage": "npm run test:coverage"
	},
	"author": "Ishan Bagchi",
	"license": "ISC",
	"devDependencies": {
		"supertest": "^6.3.4",
		"tap": "^18.6.1"
	},
	"dependencies": {
		"express": "^4.18.2",
		"winston": "^3.17.0"
	},
	"engines": {
		"node": ">= 18.0.0"
	}
}
